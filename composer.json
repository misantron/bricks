{
    "name": "misantron/bricks",
    "description": "Flexible form builder with data validation and pre processing",
    "keywords": ["php", "form", "builder"],
    "homepage": "https://github.com/misantron/bricks",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": ">=7.0",
        "ext-json": "*",
        "vlucas/valitron": "~1.4",
        "psr/http-message": "~1.0",
        "nesbot/carbon": "~1.22"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "friendsofphp/php-cs-fixer": "~2.10"
    },
    "autoload": {
        "psr-4": {
            "Bricks\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Bricks\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "scripts": {
        "phpcs": "./vendor/bin/php-cs-fixer fix -v --diff --dry-run"
    }
}